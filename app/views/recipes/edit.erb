<h1>Update your <%= @recipe.name %> recipe</h1>

<form action="/recipes/<%= @recipe.id %>" method="post">
  <input type="hidden" name="_method" value="PATCH">
  Recipe Name: <input type="text" name="name" value="<%= @recipe.name %>"><br>
  Ingredients: <input type="text" name="ingredients" value="<%= @recipe.ingredients %>"><br>
  Cook Time: <input type="text" name="cook_time" value="<%= @recipe.cook_time %>"><br>
  <input type="submit" value="Update recipe">
</form>
